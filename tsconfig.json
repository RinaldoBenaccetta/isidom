{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "src/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "docs",
        "build",
        "node_modules"
    ]
}
